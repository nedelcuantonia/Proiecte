</servlet>
<servlet-mapping>
    <servlet-name>ClientiServlet</servlet-name>
    <url-pattern>/clienti</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>FurnizoriclientiServlet</servlet-name>
    <servlet-class>servlet.FurnizoriclientiServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>FurnizoriclientiServlet</servlet-name>
