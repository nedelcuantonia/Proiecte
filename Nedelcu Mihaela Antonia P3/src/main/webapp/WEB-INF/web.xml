    <servlet-mapping>
        <servlet-name>ProdusefurnizoriServlet</servlet-name>
        <url-pattern>/produseFurnizori</url-pattern>
    </servlet-mapping>

   
 <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
</welcome-file-list>
    
</web-app>
